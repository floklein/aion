{
  "name": "aion",
  "devDependencies": {
    "turbo": "^2.5.6",
    "@biomejs/biome": "^2.2.2"
  },
  "packageManager": "pnpm@10.15.1",
  "private": true,
  "scripts": {
    "check": "biome check --write .",
    "ruler:apply": "pnpm dlx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
